<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Base.Theme.AppCompat.Light.DarkActionBar">

        <!-- Customised Theme for the 7days of code challenge . -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name = "question_number">
        <item name="android:textStyle">bold</item>
        <item name= "android:textColor">#000</item>
        <item name= "android:layout_width">wrap_content</item>
        <item name= "android:layout_height">wrap_content</item>
    </style>

    <style name = "question">
        <item name="android:textStyle">bold</item>
        <item name= "android:textColor">#323232</item>
        <item name= "android:layout_width">wrap_content</item>
        <item name= "android:layout_height">wrap_content</item>
        <item name= "android:textSize">14sp</item>
    </style>

    <style name = "radio">
        <item name="android:textStyle">italic</item>
        <item name= "android:textColor">#4c4c4c</item>
        <item name= "android:layout_width">wrap_content</item>
        <item name= "android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">7dp</item>
    </style>

    <style name = "horizontal_view">
        <item name= "android:layout_width">match_parent</item>
        <item name= "android:layout_height">1dp</item>
        <item name="android:layout_marginLeft">7dp</item>
        <item name="android:layout_margin">10dp</item>
    </style>

    <style name = "vertical_view">
        <item name= "android:layout_width">1dp</item>
        <item name= "android:layout_height">match_parent</item>
        <item name="android:layout_margin">10dp</item>
    </style>

    <style name="button_view">
        <item name= "android:layout_width">wrap_content</item>
        <item name= "android:layout_height">wrap_content</item>
        <item name= "android:layout_gravity">center_horizontal</item>
    </style>
</resources>
